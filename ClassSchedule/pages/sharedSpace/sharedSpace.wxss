/* pages/sharedSpace/sharedSpace.wxss */
.container {
  padding: 0;
}

.classList {
  width: 100%;
  height: 100%; 
}

.head{
  font-size:36rpx;
  text-align:center;
  padding:30rpx;
}

/* 无数据 */
.noClassTable {
  /* display: none;  */
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassBody {
  /* display: none; */
  width: 100%;
  margin: 0auto;
}
.haveClassTable {
  width: 100%;
}
.item {
  position: relative;
  border-top: 2rpx solid #eee;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
  margin: 0 20rpx;
}
.isChanged {
  display: flex;
  flex: 1;
}

.item:last-child {
  border-bottom: 2rpx solid #eee;
}
.noChanged .inner.txt{
  width: 100%;
}
.inner.txt {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  transition: left 0.2s ease-in-out
}
.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  right: 0;
  color: #fff;
  height: 120rpx;
}
.item-icon {
  width: 100rpx;
  height: 100rpx !important;
  margin-right: 16rpx;
  border-radius: 50%;
}
.item-text{
  flex: 1;
  font-size: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 16rpx;
}
.item-next, .item-edit-png{
  width: 40rpx;
}

.item-edit{
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  width: 120rpx;
  border-left: 2rpx solid #eee;
}

.item-edit .importClass, .item-edit .item-edit-pngBody{
  width:100%;
  height: 60rpx; 
  text-align:center;
  line-height:60rpx;
}

.item-edit .item-edit-pngBody{
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 2rpx solid #eee;
}

/* 新增按钮 */
.addBtn {
  display: flex;
  align-items: center;
  height: 120rpx;
  background: #f5f5f5;
  margin: 20rpx;
}
.addBtn .addBtn-img {
  width: 60rpx;
  height: 55rpx;
  margin-right: 40rpx;
}
