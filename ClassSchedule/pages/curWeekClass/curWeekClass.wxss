/* pages/curWeekClass/curWeekClass.wxss */
.container{
  padding: 20rpx 0 0 0;
}
.calendar {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav {
  height: 60rpx;
  margin-top: 20rpx;
}

.nav .nav-body {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  overflow: hidden;
}

.nav-img {
  width: 60rpx;
  height: 60rpx;
}

.nav-btn {
  display: flex;
  flex: 1;
}

.nav-btn-body {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
}

.nav-add-left, .nav-add-right-btn {
  display: flex;
  color: #fff;
  font-size: 24rpx;
  background: #54cbf0;
  padding: 0 16rpx;
  margin: 0;
  margin-left: 16rpx;
}

.nav-add-left {
  background: #fff;
  border-color: none;
}

.nav-add-left:after, .nav-add-right button:after {
  border: none;
}

.nav-add-right {
  display: flex;
}

.classBody {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.weui-navbar-body{
  padding: 0 20rpx;
  border-bottom: 2rpx solid #d1d1d1;
}
.weui-navbar {
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  z-index: 100;
  background: white;
}

/* .rec {
  width: 100%;
  height: 7%;
} */

.weui-navbar .default-item {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
  height: 7%;
  padding: 10rpx;
  border: 2rpx solid #d1d1d1;
  border-bottom: none;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  margin-right: 6rpx;
}

.weui-navbar .item_on {
  color: #fff;
  background: #54cbf0;
}

.weui-navbar-slider {
  position: absolute;
  width: 160rpx;
  height: 4rpx;
  content: "";
  background: #54cbf0;
  bottom: 0;
  left: 12.5rpx;
  transition: transform 0.3s;
}

.swiper-box {
  display: flex;
  flex: 1;
}

.swiper-box .swiper-item {
  display: flex;
  text-align: center;
  height: 100%;
}

.slide-view {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
}

.calendar-week{
  display: flex;
  align-items: center;
  border-top: 2rpx solid #d1d1d1;
  border-bottom: 2rpx solid #d1d1d1;
}
.month{
  width: 52rpx;
  height: 20rpx;
}

.week-list {
  display: flex;
  flex: 1;
  flex-direction: row;
}

.week-list .week-item {
  display: flex;
  flex-grow:1;
  border-right: 2rpx solid #d1d1d1;
}
.week-list .week-item:nth-child(1){
  border-left: 2rpx solid #d1d1d1;
}
.week-list .week-item:nth-last-child(1){
  border-right: none;
}

.lastDate {
  color: #000 !important;
  background: #f5f5f5 !important;
}

.isToday {
  color: #fff !important;
  background: #782878 !important;
}

.week-list .week-item .week-item-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.week-item-body text {
  width: 100%;
  padding: 10rpx 0;
}

.week-item-body text:nth-child(1){
  border-bottom: 2rpx solid #d1d1d1;
}

.week-item-body .today {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.week-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.paging {
  display: flex;
  justify-content: flex-end;
}

.paging .img-button {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.paging .img-button image {
  width: 40rpx;
  height: 40rpx;
}

.pre-week-btn {
  margin-right: 120rpx;
}

.tab-scroll {
  display: flex;
  flex: 1;
  z-index: 10;
  background-color: #fff;
}

.tab-container {
  display:flex;
  flex:1;
  flex-direction: row;
  position: relative;
}

.tab-divide {
  background-color:#f6f6f6;
  color:#7A7D80;
}

.tab-divide-item {
  width: 54rpx;
  height: 200px;
  font-size: 24rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #d1d1d1;
  border-right: 2rpx solid #d1d1d1;
  box-sizing: border-box;
}

.tab-divide-item text {
  width: 24rpx;
  line-height: 1.5;
}

.tab-body{
  display: flex;
  flex: 1;
}

.tab-section {
  background-color:#f6f6f6;
  color:#18191A;
}

.tab-section-divide {
  width: 53rpx;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #d1d1d1;
  box-sizing: border-box;
}

.tab-section-item {
  width: 53rpx;
  height: 50px;
  font-size: 24rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}

.tab-line-column {
  /* position: absolute; */
  /* width: 1px; */
  /* height: calc(100% - 60rpx - 110rpx); */
  /* background-color:#d1d1d1; */
  /* margin-top: -1px; */
  display:flex;
  flex-grow:1;
  border-right:2rpx solid #d1d1d1;
}
.tab-line-column:nth-child(7){
  border-right: none;
}

.tab-line {
  position: absolute;
  width: 100%;
  height: 1px;
  background-color:#d1d1d1;
  margin-top: -1px;
}

.course-item {
  position: absolute;
  width: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.course-item-inner {
  width: 100%;
}
.course-item-inner-body{
  width: 100%;
  border-radius: 3px;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

.course-item-inner-body text:not(:last-child) {
  margin-bottom: 6rpx;
}