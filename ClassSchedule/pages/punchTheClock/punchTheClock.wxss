/* pages/punchTheClock/punchTheClock.wxss */
.container {
  padding: 20rpx 0 0 0;
}

.containerBody {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.punchTheClock {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.weui-navbar-body {
  padding: 0 20rpx;
  border-bottom: 2rpx solid #d1d1d1;
}

.weui-navbar {
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  z-index: 100;
  background: white;
}

.weui-navbar .default-item {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
  height: 7%;
  padding: 10rpx;
  border: 2rpx solid #d1d1d1;
  border-bottom: none;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  margin-right: 6rpx;
}

.weui-navbar .item_on {
  color: #fff;
  background: #54cbf0;
}

.weui-navbar-slider {
  position: absolute;
  width: 160rpx;
  height: 4rpx;
  content: "";
  background: #54cbf0;
  bottom: 0;
  left: 12.5rpx;
  transition: transform 0.3s;
}

.swiper-box {
  display: flex;
  flex: 1;
}

.swiper-box .swiper-item {
  display: flex;
  text-align: center;
  height: auto !important;
}

.slide-view {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
}

.tab-scroll {
  display: flex;
  /* flex: 1; */
  z-index: 10;
  background-color: #fff;
}

.tab-container {
  display:flex;
  flex:1;
  flex-direction: row;
  position: relative;
}

/* 无数据 */
.noClassTable {
  /* display: none;  */
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassBody {
  /* display: none; */
  width: 100%;
  margin: 0auto;
}
.haveClassTable {
  width: 100%;
}

.haveDataItem{
  /* background:#f3f4f6; */
}
.haveDataItemTitle{
  font-size: 32rpx;
  font-weight: bold;
  text-align: left;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.dataBody{
  width: 100%; 
  margin: 0 auto;
}

.list{ 
  position: relative; 
  height: 200rpx; 
  background-color: #f3f4f6; 
  margin: 20rpx; 
  border-radius: 10rpx;
} 
/* 删除外层包裹视图 */
.listItem{ 
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  position: relative;
  width: 100%; 
  height: 100%;
  z-index: 5; 
  background-color:#f3f4f6;
} 
.listItemBody{
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  padding:10rpx 20rpx 0;
}
.top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.middle{
  font-size: 24rpx;
  text-align: left;
}
.bottom{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: left;
  padding: 10rpx 0;
}
.bottom .limitPunchCard{
  color: #54cbf0;
  text-shadow: 0.1em 0.1em #333;
}
.picBody{
  display: flex;
  align-items: center;
}
.punchCardPic{
  height:80rpx;
  width:80rpx;
}
.cancelCardPic{
  height:66rpx;
  width:66rpx;
}
.rightGreenPic{
  width: 40rpx;
  height: 40rpx;
}

/* 操作按钮——编辑、删除 */
.editBtn{ 
  position: absolute; 
  top:0; 
  right: 0; 
  height: 100%;
} 
.itemDel{ 
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 100%;
  text-align: center; 
  z-index: 4; 
  color: #fff;
  font-size: 36rpx;
  background-color: #e64340; 
} 




/* 操作区 */
.editBody{
  display:flex;
  padding:10rpx 0;
  align-items:center;
  justify-content: space-around;
}
.editLeft, .editLeft .pig{
  width: 100rpx;
}
.editRight, .editRight .addBtn{
  width: 80rpx;
}