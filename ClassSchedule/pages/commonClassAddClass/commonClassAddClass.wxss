.tab-line-column {
  display:flex;
  flex-grow:1;
  border-right:2rpx solid #d1d1d1;
}
.tab-line-column:nth-child(7){
  border-right: none;
}

.tab-line {
  position: absolute;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color:#d1d1d1;
  /* margin-top: -2rpx; */
}

.course-item {
  position: absolute;
  width: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.course-item-inner {
  width: 100%;
}
.course-item-inner-body{
  width: 100%;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.course-item-inner-body text{
  width: 100%;
}
.course-item-inner-body text:not(:last-child) {
  margin-bottom: 6rpx;
}


/* 操作按钮 */
.editBtn {
  display: flex;
  padding: 10rpx 0;
}

.editBtn button {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: 60rpx;
  background: #f5f5f5;
  margin: 0 10rpx;
}

.editBtn button.save{
  color: #fff;
  background-color: #54cbf0;
}