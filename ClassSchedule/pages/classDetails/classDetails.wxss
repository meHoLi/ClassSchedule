/* pages/classDetails/classDetails.wxss */
.container {
  padding: 0;
}

.classDetails {
  width: 100%;
  height: 100%; 
  display:flex;
  flex-direction:column;
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 36rpx;
  padding: 20rpx 0;
  /* margin-bottom: 20rpx; */
}
.details{
  display: flex;
  flex: 1;
  border: 2rpx solid #f0f0f0;
}
.details-body{
  display:flex;
  flex:1;
  flex-direction: row;
  position: relative;
}


/* 时间线 */
.timeLine{
  width: 90rpx;
}
.timeItem {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: flex-end;
  height: 116rpx;
  /* text-align: center; */
  border: 2rpx dashed #f0f0f0;
}


/* 无数据 */
.noClassTable {
  display: flex;
  flex: 1;
  position: absolute;
  left: 0;
  right: 0;
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassTable{
  display: flex;
  flex: 1;
}
.class-item {
  position: absolute; 
  width: 100%; 
  display: flex;
  align-items: center;
  background: rgba(84, 203, 240, 0.3);
  border-top: 6rpx solid #54cbf0;
}

.class-item-inner {
  border-radius: 6rpx;
  font-size: 24rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  /* overflow: hidden;
  text-overflow: ellipsis; */
}
.class-item-inner text{
  height: 80rpx;
  line-height: 80rpx;
}
.class-item-inner-time, .class-item-inner-school, .class-item-inner-isRemind{
  padding: 0 16rpx;
  border-right: 2rpx solid #54cbf0;
}
.class-item-inner-school{
  width: 230rpx;
  text-align: center;
}
.class-item-inner-isRemind{
  width: 100rpx;
  text-align: center;
}
.class-item-inner-edit{
  width: 40rpx;
  padding-left: 12rpx;
}



/* 新增按钮 */
.addSchedule {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #f5f5f5;
  margin: 20rpx;
}
.addSchedule .addSchedule-img {
  width: 60rpx;
  height: 55rpx;
  margin-right: 40rpx;
}