/* pages/classDetails/classDetails.wxss */
.container {
  padding: 0;
}

.classDetails {
  width: 100%;
  height: 100%; 
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 36rpx;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

/* 无数据 */
.noClassTable {
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}






/* 新增按钮 */
