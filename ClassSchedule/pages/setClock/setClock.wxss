/* pages/setClock/setClock.wxss */
.container{
  background: #f3f4f6;
}
.info-cont {
  width: 100%;
  height: 100%;
  /* display: flex;
  flex-direction: column; 
  justify-content: space-between; */
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.clockNameInput{
  height:110rpx;
  font-size:36rpx;
  background:#fff;
  padding:0 16rpx;
  border-radius:6rpx;
}

.repetitionPeriodBody, .clockDetails{
  background: #fff;
  padding: 16rpx;
  border-radius:6rpx;
  margin: 20rpx 0;
}

.titleBody{
  display:flex;
  justify-content:space-between;
  align-items: center;
}

.titleBody .right{
  display: flex;
}

.titleBody .right .titleBtn{
  width:80rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  border:2rpx solid #54cbf0;
}

.titleBody .right .isChecked{
  color: #fff;
  background: #54cbf0;
}

.titleBody .right .titleBtn:nth-child(1){
  border-right: 0;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}
.titleBody .right .titleBtn:nth-child(3){
  border-left: 0;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

.weekBody, .dayNumListBody{
  display: flex;
  margin-top:20rpx;
}
.weekBody .day, .dayNumListBody .num{
  display:flex;
  flex-grow:1;
  justify-content: center;
  align-items: center;
  color: #99a2b1;
  background: #f2f3f7;
  margin-right: 10rpx;
}
.weekBody .day{
  border-radius: 6px;
}
.dayNumBody{
  margin-top: 20rpx;
}
.dayNumListBody .num{
  height: 40rpx;
  margin-right: 2rpx;
}
.dayNumListBody .num:nth-child(1){
  border-top-left-radius: 26rpx;
  border-bottom-left-radius: 26rpx;
}
.dayNumListBody .num:nth-last-child(1){
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
}
.weekBody .day:nth-last-child(1), .dayNumListBody .num:nth-last-child(1){
  margin-right: 0;
}
.blueItem{
  color: #ffffff !important;
  background: #54cbf0 !important;
}

.clockDetails .detailItem{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.clockDetails .detailItem:nth-last-child(1){
  margin-bottom: 0;
}
.detailItem{
  padding: 10rpx 0;
}
.detailTitle{
  width: 200rpx;
}
.bonusPointsTitle{
  width: 350rpx;
}
.detailEdit{
  display: flex;
  flex: 1;
}
.durationTimePicker{
  width: 160rpx;
}
.durationTimePickerEnd{
  text-align: right;
}
.placeholder{
  color: #808080;
}

.switchBtn{
  margin-right: 10rpx;
}
.limitTime{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  color: #000;
}
.limitTime image{
  width: 40rpx;
  height: 40rpx;
}
.limitTime image:first-child{
  margin-right: 10rpx;
}
.limitTime image:last-child{
  margin-left: 10rpx;
}
.limitTime input{
  width: 80rpx;
  background-color: rgba(84, 203, 240, 0.2);
  border-radius: 10rpx;
  margin: 0 10rpx;
  text-align: center;
}
.radio-group{
  display: flex;
}
.radio-group .radio{
  display:flex;
  align-items:center;
  margin-right: 14rpx;
}
.radio-group .radio:nth-last-child(1){
  margin-right: 0;
}
.radio-group .radio radio{
  width: 50rpx;
  height: 50rpx;
}


.bonusPointsInput{
  flex: 1;
  padding:0 16rpx;
  border:1px solid #c3c3c3;
  border-radius:3px;
}


/* 编辑按钮 */
.btn{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
 .btn>button,.btn .saveBtn{
  flex-grow: 1;
} 
.btn .cancelBtn,.btn .delBtn{
  background: #fff;
  margin-right: 16rpx;
}
.btn .saveBtn{
  color: #fff;
  background: #54cbf0;
}