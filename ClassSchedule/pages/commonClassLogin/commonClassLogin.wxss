/* pages/commonClassLogin/commonClassLogin.wxss */
.info-cont {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.info-items{
  height:80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 40rpx;
  border-top:2rpx solid #f0f0f0;
}
.info-items:nth-child(2){
  border-bottom:2rpx solid #f0f0f0;
}
.title{
  display: flex;
  width: 262rpx;
  height: 100%;
  flex-direction: row;
  align-items: center; 
}
.asterisk{
  color: red;
  font-size: 30rpx;
  padding-top: 8rpx;
  padding-right: 6rpx;
}

.infotext{
  display: flex;
  flex: 1;
  height: 100%;
  text-align: right;
  line-height: 90rpx;
}
.info-motto{
  width: 100%;
  height: 100%;
}

.btn{
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 40rpx;
}
 .btn>button{
  flex-grow: 1;
} 
.btn .loginlBtn{
  margin-right: 16rpx;
}

/* 已创建的公共课程表列表 */
.commonClassList{
  display: flex;
  flex-direction: column;
  border-top:2rpx solid #54cbf0;
}
.commonClassList .title{
  display: flex;
  flex: 1;
  width: 100%;
  padding: 10rpx 0 40rpx;
}
.commonClassList .item {
  display:flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.commonClassList .item .commonClassBtn{
  display: flex;
  flex: 1;
  text-align: center;
  margin-right: 20rpx;
}
.commonClassList .item .item-edit{
  width: 40rpx;
}