/* pages/addDetailedDetails/addDetailedDetails.wxss */
.container {
  flex-direction:column;
  padding: 0;
}

.classList {
  width: 100%;
  height: 100%; 
}

.detailedListName{
  font-size: 36rpx;
  text-align: center;
  padding: 20rpx 0;
}

/* 无数据 */
.noClassTable {
  /* display: none;  */
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassBody {
  /* display: none; */
  width: 100%;
  margin: 0auto;
}
.haveClassTable {
  width: 100%;
}
.item {
  /* position: relative; */
  border-top: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  overflow: hidden;
  margin: 0 20rpx;
}
.item:last-child {
  border-bottom: 2rpx solid #eee;
}
/* .inner {
  position: absolute;
  top: 0;
} */
.inner.txt {
  background-color: #fff;
  /* width: 100%; */
  z-index: 1;
  transition: left 0.2s ease-in-out;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pastDueItem{
  /* font-size: 24rpx; */
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  color: #a0a0a0;
}
.item:last-child {
  /* border-bottom: none; */
}
.pastDueItem .line{
  position:absolute;
  top:50%;
  left: 0;
  width:100%;
  height:2rpx;
  background:#a0a0a0;
}
.item-num{
  width: 70rpx;
}
.item-text{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}
.item-edit{
  width: 40rpx;
}

/* 清单列表 */
.detailedList .item{
  position: relative;
}
.detailedList .listItem{
  display: flex;
  align-items:center;
  border: none;
  border-bottom: 2rpx solid #eee;
  position: relative;
  z-index: 5;
  background: #fff;
}
.detailedList .item .inner.txt{
  flex: 1;
  /* border-right: 2rpx solid #eee; */
}
.detailedList .item .item-edit{
  padding:0 20rpx;
}

/* 左滑删除 */
.deleteBtn{ 
  position: absolute; 
  top:0; 
  right: 0; 
  height: 100%;
} 
.itemDel{ 
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 100%;
  text-align: center; 
  z-index: 4; 
  color: #fff;
  font-size: 36rpx;
  background-color: #e64340; 
} 

/* 操作按钮 */
.editBtn {
  display: flex;
  margin: 20rpx 0;
}

.editBtn button {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  margin: 0 10rpx;
}

.addNewClass .addSchedule-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
