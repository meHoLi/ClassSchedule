/* pages/limitProject/limitProject.wxss */
.container{
  background: #f3f4f6;
}
.info-cont {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
  justify-content: space-between;
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.clockNameInput{
  height:110rpx;
  font-size:36rpx;
  background:#fff;
  padding:0 16rpx;
  border-radius:6rpx;
}

.clockDetails{
  background: #fff;
  padding: 16rpx;
  border-radius:6rpx;
  margin: 20rpx 0;
}

.clockDetails .detailItem{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.clockDetails .detailItem:nth-last-child(1){
  margin-bottom: 0;
}
.detailItem{
  padding: 10rpx 0;
}
.detailTitle{
  width: 250rpx;
}
.detailEdit{
  display: flex;
  flex: 1;
}

.switchBtn{
  margin-right: 10rpx;
}
.limitTime{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  color: #000;
}
.limitTime image{
  width: 40rpx;
  height: 40rpx;
}
.limitTime image:first-child{
  margin-right: 10rpx;
}
.limitTime image:last-child{
  margin-left: 10rpx;
}
.limitTime input{
  width: 80rpx;
  background-color: rgba(84, 203, 240, 0.2);
  border-radius: 10rpx;
  margin: 0 10rpx;
  text-align: center;
}

/* 编辑按钮 */
.btn{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
 .btn>button,.btn .saveBtn{
  flex-grow: 1;
} 
.btn .cancelBtn,.btn .delBtn{
  background: #fff;
  margin-right: 16rpx;
}
.btn .saveBtn{
  color: #fff;
  background: #54cbf0;
}