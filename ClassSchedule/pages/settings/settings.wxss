/* pages/settings/settings.wxss */

.container {
  padding: 0;
}

.classList {
  width: 100%;
  height: 100%; 
}

/* 无数据 */
.noClassTable {
  /* display: none;  */
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassBody {
  /* display: none; */
  width: 100%;
  margin: 0auto;
}
.haveClassTable {
  width: 100%;
}
.item {
  position: relative;
  border-top: 2rpx solid #eee;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
  margin: 0 20rpx;
}
.item:last-child {
  border-bottom: 2rpx solid #eee;
}
.inner {
  position: absolute;
  top: 0;
}
.inner.txt {
  background-color: #fff;
  width: 100%;
  z-index: 1;
  transition: left 0.2s ease-in-out;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  right: 0;
  color: #fff;
  height: 120rpx;
}
.item-icon {
  width: 100rpx;
  height: 100rpx !important;
  margin-right: 16rpx;
  border-radius: 50%;
}
.item-text{
  width: 550rpx; 
  font-size: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 16rpx;
}
.item-edit{
  width: 40rpx;
}

/* 新增按钮 */
.addNewClass {
  display: flex;
  align-items: center;
  height: 120rpx;
  background: #f5f5f5;
  margin: 20rpx;
}
.addNewClass .addNewClass-img {
  width: 60rpx;
  height: 55rpx;
  margin-right: 40rpx;
}

/* 公共课程吧表、帮助 */
.common-item {
  position: relative;
  border-top: 2rpx solid #eee;
  font-size: 36rpx;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
  margin: 0 20rpx; 
}
.common-item:nth-last-child(1){
  border-bottom: 2rpx solid #eee;
}

.common {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.common-text{
  display: flex;
  flex: 1;
}
.common-edit{
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.common-edit image{
  width: 50rpx;
}

