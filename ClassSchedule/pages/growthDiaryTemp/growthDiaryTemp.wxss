/* pages/growthDiaryTemp/growthDiaryTemp.wxss */
.info-cont{
  width: 100%;
}
.info .img .pic{
  width: 100%;
  height: 500rpx;
}

.details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx 0;
  border-bottom:2rpx solid #000;
}
.details .img{
  width: 60rpx;
}

.diaryContent{
  height: 300rpx;
  overflow-wrap:break-word;
  padding: 20rpx 0; 
}

.btn{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
 .btn>button {
  flex-grow: 1;
} 
.btn .updateBtn {
  margin-right: 16rpx;
}
.btn .saveBtn {
  color: #fff;
  background: #54cbf0;
}