/* pages/notice/notice.wxss */
.container {
  flex-direction:column;
  padding: 0;
}

.classList {
  width: 100%;
  height: 100%; 
}

/* 无数据 */
.noClassTable {
  /* display: none;  */
  margin-bottom: 80rpx; 
}
.noClassTableBody {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noClassTable .noClass-img {
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx 0;
}

/* 有数据 */
.haveClassBody {
  /* display: none; */
  width: 100%;
  margin: 0auto;
}
.haveClassTable {
  width: 100%;
}
.item {
  /* position: relative; */
  border-top: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  overflow: hidden;
  margin: 0 20rpx;
}
.item:last-child {
  border-bottom: 2rpx solid #eee;
}
/* .inner {
  position: absolute;
  top: 0;
} */
.inner.txt {
  background-color: #fff;
  /* width: 100%; */
  z-index: 1;
  transition: left 0.2s ease-in-out;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pastDueItem{
  position: relative;
  /* font-size: 24rpx; */
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  color: #a0a0a0;
}
.item:last-child {
  border-bottom: none;
}
.pastDueItem .line{
  position:absolute;
  top:50%;
  left: 0;
  width:100%;
  height:2rpx;
  background:#a0a0a0;
}
.item-num{
  width: 70rpx;
}
.item-text{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}
.item-edit{
  width: 40rpx;
}

/* 清单列表 */
.detailedList .item{
  display: flex;
  align-items:center;
  border: none;
  border-bottom: 2rpx solid #eee;
}
.detailedList .item .inner.txt{
  flex: 1;
  border-right: 2rpx solid #eee;
}
.detailedList .item .item-edit{
  padding:0 20rpx;
}

/* 新增按钮 */
.addNewClass {
  display: flex;
  align-items: center;
  height: 120rpx;
  background: #f5f5f5;
  margin: 20rpx;
}
.addNewClass .addNewClass-img {
  width: 60rpx;
  height: 55rpx;
  margin-right: 40rpx;
}

/* tabBar */
.tabBar{
  display: flex;
  border-top: 2rpx solid #d1d1d1;
}
.tabBar view{
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  text-align:center;
  font-size:30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #d1d1d1;
  border-top: none;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  margin-right: 6rpx;
}

.modal{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #000;
  padding: 50rpx 0;
  /* border-top: 2rpx solid #d1d1d1; */
  /* border-bottom: 2rpx solid #d1d1d1; */
}
.modal input{
  flex: 1;
  padding: 0 10rpx;
  border: 2rpx solid #d1d1d1;
  margin: 0 10rpx;
}